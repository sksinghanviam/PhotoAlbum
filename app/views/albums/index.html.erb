<h1>Listing albums</h1>
 
<button><%= link_to 'New Album', new_album_path %></button>
<hr>
<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th colspan="2"></th>
  </tr>
  <% @albums.each do |album| %>
    <tr>
      <td><%= album.title %></td>
      <td><%= album.text %></td>
      <td><button><%= link_to 'Show', album_path(album) %></button></td>
      <td><button><%= link_to 'Edit', edit_album_path(album) %></button></td>
      <td><button><%= link_to 'Delete', album_path(album),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></button></td>
    </tr>
  <% end %>
</table>
<hr>
